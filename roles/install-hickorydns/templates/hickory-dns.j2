# This is a systemd service for trust dns
[Unit]
Description=trust-dns
Requires=network.target

[Service]
Type=simple
TimeoutStartSec=60
RestartSec=60
LimitNOFILE=1000000
Restart=always
ExecStart=/usr/bin/hickory-dns --config /etc/named/named.conf
# when loaded by strange external requests memory use may baloon
MemoryMax=1G
MemorySwapMax=0

[Install]
WantedBy=default.target
